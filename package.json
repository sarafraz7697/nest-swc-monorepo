{
  "name": "nest-swc-monorepo",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "email:dev": "email dev -p 3001",
    "build": "nx run-many -t build --projects=api,advertise",
    "build:api": "nx build api",
    "build:advertise": "nx build advertise",
    "build:all": "nx run-many -t build --projects=api,advertise",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nx serve api",
    "start:dev": "nx serve api",
    "start:debug": "nx serve api --inspect",
    "start:prod": "node -r tsconfig-paths/register dist/apps/api/src/main.js",
    "start:advertise": "nx serve advertise",
    "start:advertise:prod": "node dist/apps/advertise/advertise/src/main.js",
    "lint": "nx run-many -t lint --all",
    "lint:api": "nx lint api",
    "lint:advertise": "nx lint advertise",
    "test": "nx run-many -t test --all",
    "test:api": "nx test api",
    "test:advertise": "nx test advertise",
    "test:watch": "nx test --watch",
    "test:cov": "nx run-many -t test --all --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json",
    "graph": "nx graph",
    "affected": "nx affected",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "affected:lint": "nx affected -t lint",
    "populate:account": "node dist/scripts/populate_user_data.js",
    "populate:join": "node dist/scripts/join_user_data.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "nodemon": "^3.1.11",
    "nx": "^22.1.3",
    "@nx/js": "^22.1.3",
    "@nx/webpack": "^22.1.3",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@swc/helpers": "^0.5.17",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
